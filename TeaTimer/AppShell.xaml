<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="com.mahonkin.tim.maui.TeaTimer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:com.mahonkin.tim.maui.TeaTimer"
    xmlns:datamodel="clr-namespace:com.mahonkin.tim.maui.TeaTimer.DataModel"
    x:DataType="datamodel:TeaModel"
    Shell.FlyoutBehavior="Disabled">
    <TabBar x:Name="TabBar">
        <Tab x:Name="TimerTab"
             Route="Timer"
             Title="Timer"
             Icon="timer_icon.png">
            <ShellContent Title="Welcome to Tea Timer!"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab x:Name="TeasTab"
             Title="Tea List"
             Icon="tea_icon.png">
            <ShellContent Title="Tea List"
                ContentTemplate="{DataTemplate local:TeaList}"
                Route="TeaList" />
        </Tab>
    </TabBar>
</Shell>

